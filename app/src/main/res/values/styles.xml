<resources xmlns:tools = "http://schemas.android.com/tools">

    <!-- Base application theme. -->
	<style name = "AppTheme" parent = "Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
		<!-- Primary theme color of the app (sets background color of app bar) -->
		<item name = "colorPrimary">#FF9800</item>
		<!-- Primary dark theme color of the app (sets color of status bar) -->
		<item name="colorPrimaryDark">#FB8C00</item>
		<!-- Background color of buttons in the app -->
		<item name = "colorButtonNormal">#FF9800</item>
    </style>
	
	<!-- Custom Background color for a group of buttons (Red Wrestler buttons) -->
	<style name = "RedButtonStyle" parent = "Widget.AppCompat.Button">
		<item name = "android:colorButtonNormal" tools:targetApi = "lollipop">#F44336</item>
	</style>

</resources>